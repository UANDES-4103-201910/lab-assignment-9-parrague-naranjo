<%= form_with(model: shoping, local: true) do |f| %>

  <div class="form-group">
    <%= f.label "Event/price" %>
    <%= f.grouped_collection_select :ticket_type_id, Event.order(:name), :ticket_types, :name, :id, :price %>
  </div>

  <div class="form-group">
    <%= f.label "Amount" %>
    <%= f.number_field :amount %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
