<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_date %></td>
        <td><%= event.place %></td>
        <td><%= link_to 'Show', event %></td>
        <td><% if can? :update, @event %><%= link_to 'Edit', edit_event_path(event) %>><% end %></td>
        <td><% if can? :destroy, @event %><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
